<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f5f5f5;"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.datasensefx.controllers.RegisterController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- Panel central blanco -->
    <VBox alignment="TOP_CENTER" prefWidth="450.0" spacing="15.0"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
        </padding>

        <!-- Título -->
        <Label text="Crear Cuenta" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <Label text="Completa el formulario para registrarte" textFill="#666666">
            <font>
                <Font size="12.0" />
            </font>
        </Label>

        <!-- Nombre completo -->
        <VBox spacing="5.0">
            <Label text="Nombre completo *">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <TextField fx:id="nameField" promptText="Juan Pérez"
                       style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
            </TextField>
        </VBox>

        <!-- Email -->
        <VBox spacing="5.0">
            <Label text="Correo electrónico *">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <TextField fx:id="emailField" promptText="correo@ejemplo.com"
                       style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
            </TextField>
        </VBox>

        <!-- Contraseña -->
        <VBox spacing="5.0">
            <Label text="Contraseña *">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Mínimo 6 caracteres"
                           style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
            </PasswordField>
        </VBox>

        <!-- Confirmar contraseña -->
        <VBox spacing="5.0">
            <Label text="Confirmar contraseña *">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <PasswordField fx:id="confirmPasswordField" promptText="Repite tu contraseña"
                           style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
            </PasswordField>
        </VBox>

        <!-- Pregunta de seguridad (opcional) -->
        <VBox spacing="5.0">
            <Label text="Pregunta de seguridad (opcional)">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <ComboBox fx:id="securityQuestionCombo" promptText="Selecciona una pregunta"
                      maxWidth="Infinity"
                      style="-fx-border-color: #e0e0e0; -fx-border-radius: 5;">
            </ComboBox>
        </VBox>

        <!-- Respuesta de seguridad -->
        <VBox spacing="5.0">
            <Label text="Respuesta de seguridad (opcional)">
                <font>
                    <Font size="12.0" />
                </font>
            </Label>
            <TextField fx:id="securityAnswerField" promptText="Tu respuesta"
                       style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-padding: 10;">
            </TextField>
        </VBox>

        <!-- Botón Registrarse -->
        <Button fx:id="registerButton" text="Registrarse" onAction="#handleRegister"
                maxWidth="Infinity" defaultButton="true"
                style="-fx-background-color: #0066cc; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;">
            <padding>
                <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
            </padding>
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Button>

        <!-- Botón Volver -->
        <Button text="Ya tengo cuenta - Iniciar sesión" onAction="#handleBackToLogin"
                style="-fx-background-color: transparent; -fx-text-fill: #0066cc; -fx-cursor: hand;">
            <font>
                <Font size="12.0" />
            </font>
        </Button>

    </VBox>
</VBox>